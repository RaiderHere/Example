<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context="com.example.raider.calkunits.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textUnit"
        android:textSize="@dimen/textSize" />

    <EditText
        android:id="@+id/editUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="@string/hintUnit"
        android:inputType="number|numberDecimal"
        android:selectAllOnFocus="true"
        android:textSize="@dimen/textSize"
        android:typeface="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding"
        android:text="@string/textMM"
        android:textSize="@dimen/textSize" />

    <EditText
        android:id="@+id/editMM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="@string/hintMM"
        android:inputType="number|numberDecimal"
        android:selectAllOnFocus="true"
        android:textSize="@dimen/textSize"
        android:typeface="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding"
        android:text="@string/textHole"
        android:textSize="@dimen/textSize" />

    <EditText
        android:id="@+id/editHoles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="@string/hintHole"
        android:inputType="number|numberDecimal"
        android:selectAllOnFocus="true"
        android:textSize="@dimen/textSize"
        android:typeface="normal" />

</LinearLayout>
